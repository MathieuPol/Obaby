{% extends 'base.html.twig' %}

{% block body %}

  <!-- Start Carousel    --->
  <!--link https://getbootstrap.com/docs/5.1/components/carousel/#with-captions -->
  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
        aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
        aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
        aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <!-- 1 item per slide -->
      <div class="carousel-item active">
        <img src="{{ asset('asset/img/' ~ practice1.picture) }}" class="d-block w-100 carousel-picture" alt="picture" />
        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center background-slide">
          <div class="content ">
            <div class="row justify-content-start">
              <div class="carousel-content">
                <h2 class="card-title display-3 text-white mb-6">{{ practice1.title }}</h2>
                <div class="btn-more"><a href="{{ path('practice_show', {slug: practice1.slug }) }}" class="btn more rounded-pill py-sm-2 px-sm-5 me-3">en savoir plus</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- 2 item per slide -->
      <div class="carousel-item">
        <img src="{{ asset('asset/img/' ~ practice2.picture) }}" class="d-block w-100" alt="picture" />
        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center background-slide">
          <div class="content ">
            <div class="row justify-content-start">
              <div class=" carousel-content">
                <h2 class="card-title display-3 text-white mb-6">{{ practice2.title }}</h2>
                <div class="btn-more"><a href="{{ path('practice_show', {slug: practice2.slug }) }}" class="btn more rounded-pill py-sm-2 px-sm-5 me-3">en savoir plus</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- 3 item per slide -->
      <div class="carousel-item">
        <img src="{{ asset('asset/img/' ~ practice3.picture) }}" class="d-block w-100" alt="picture" />
        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center background-slide">
          <div class="content ">
            <div class="row justify-content-start">
              <div class=" carousel-content">
                <h2 class="card-title display-3 text-white mb-6">{{ practice3.title }}</h2>
                <div class="btn-more"><a href="{{ path('practice_show', {slug: practice3.slug }) }}" class="btn more rounded-pill py-sm-2 px-sm-5 me-3">en savoir plus</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- button carousel -->
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <!-- End Carousel -->


    <!-- 3-main-buttons Start -->
    <div class="container-xxl py-5">
      <div class="container">
        <div class="row g-3">
          <div class="col-lg-4 col-sm-6">              
          <a href={{ path('category_show_practice')}}>
            <div class="main-buttons-item btn-practices">
                <div class="main-buttons-text">
                  <i class="fas fa-baby-carriage fa-3x"></i>
                  <h3 class="mb-3">Bonnes pratiques</h3>
                </div>
            </div>
          </a>
          </div>
          <div class="col-lg-4 col-sm-6">
          <a href={{ path('category_show_question')}}>
            <div class="main-buttons-item btn-questions">
                <div class="main-buttons-icon">
                  <i class="fa fa-chalkboard-teacher fa-3x justify-content-center"></i>
                </div>
                <div class="main-buttons-text">
                  <h3 class="mb-3">Questions et réponses</h3>
                </div>
            </div>
          </a>

          </div>
          <div class="col-lg-4 col-sm-6">
          <a href={{ path('question_ask')}}>
            <div class="main-buttons-item btn-ask">
                <div class="main-buttons-icon">
                  <i class="far fa-question-circle fa-3x"></i>
                </div>
                <div class="main-buttons-text">
                  <h3 class="mb-3">Poser une question</h3>
                </div>
              </div>
          </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 3-main-buttons end -->

  <!-- testimonial start -->

  <h1 class="text-center mt-lg-5 title">Dernières questions posées par la communauté</h1>


  <section class="testimonial-area">
    <div class="container">
      <div class="testimonial-content owl-carousel">
        <!-- slide item 1 -->

      {% for question in questionCarroussel %}
        <div class="single-testimonial">
          <a href="{{ path('question_list', {slug: question.category.slug}) }}">
            <p>{{ question.content }}</p>
              <div class="client-info">
                <div class="client-pic">
                  <img src="{{ asset('asset/img/'~ question.user.genre ~'.png') }}" alt="avatar" />
                </div>
                <div class="client-details">
                  <h6> {{ question.user.pseudo }}</h6>
                </div>
              </div>
          </a>
        </div>
      {% endfor %}
      </div>
    </div>
  </section>

  <!-- testimonial End -->
{% endblock %}