{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/login.css') }}"/>
{% endblock %}

{% block title %}Redéfinition du mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-center">Redéfinition du mot de passe</h1>

    {{ form_start(requestForm) }}

    	<div class="col-10 col-sm-10 col-md-10 offset-1 offset-sm-1 text-center">
			<p class="text-center">
				<strong>{{ form_row(requestForm.email) }}</strong>
			</p>
		</div>

        <div class="text-center">
            <small>
                Entrez votre adresse mail et vous recevrez un lien vous permettant de  réinitialiser votre mot de passe.
            </small>
        </div>
        <div class="d-flex justify-content-center mt-5 ">
            <a href="#" class="animated-link login-link">
                <button class="btn btn-primary ">Envoyer le mail de redéfinition</button>
            </a>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}
